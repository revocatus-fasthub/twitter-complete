<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>jInstagram - Basic Web Demo</display-name>


    <listener>
        <listener-class>tz.co.fasthub.ona.instagram.listener.DemoAppContextListener</listener-class>
    </listener>


    <servlet>
        <servlet-name>InstagramTokenHandler</servlet-name>
        <servlet-class>tz.co.fasthub.ona.instagram.InstagramTokenHandler</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>InstagramTokenHandler</servlet-name>
        <url-pattern>/handleInstagramToken/</url-pattern>
    </servlet-mapping>

</web-app>
